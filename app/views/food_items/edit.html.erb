<h1>FoodItems#edit</h1>
<%= form_for(@food_item) do |f| %>

<div class="field">
  <p>name</p> 
  <%= f.text_field :name%>
</div>

<div class="field">
  <p>calories</p> 
  <%= f.text_field :calories%>
</div>

<div class="field">
  <p>protein (g)</p> 
  <%= f.text_field :protein%>
</div>

<div class="field">
  <p>carbs (g)</p> 
  <%= f.text_field :carbs%>
</div>

<div class="field">
  <p>fat (g)</p> 
  <%= f.text_field :fat%>
</div>

<div class="field">
  <p>description</p> 
  <%= f.text_field :description%>
</div>

<div class="field">
  <p>user</p> 
  <%= f.collection_select:user_id, User.all, :id, :name %>
</div>

<div class="actions">
    <%= f.submit %>
</div>

<% end %>

