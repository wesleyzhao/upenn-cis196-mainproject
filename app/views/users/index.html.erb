<div class="page-header">
<h1>View Our Users</h1>
</div>

<table class="table table-striped table-bordered">

  <thead style="font-weight:bold">
    <tr>
      <td>
	<a href="?order_by=name&order=<% if @order_str == 'ASC' %>desc<% else %>asc<% end %>" alt="order">Name</a> (click to order)
      </td>
      <td>Email</td>
      <td>Height (cm)</td>
      <td>Weight (kg)</td>
      <td>Body fat %</td>
      <td>Activity Level</td>
      
      <td>Weight Goal (kg)</td>
      <td>Body Fat % Goal</td>
      <td>Street Addy1</td>
      <td>Street Addy2</td>
      <td>City</td>
      <td>State</td>
      <td>Zip Code</td>
      <td>Country</td>
      <td>Show Link</td>
      <td>Edit Link</td>
      <td>Destroy Link</td>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.height_cm %></td>
      <td><%= user.weight_kg %></td>
      <td><%= user.body_fat_percent %></td>
      <td><%= user.activity_level %></td>
      <td><%= user.weight_kg_goal %></td>
      <td><%= user.body_fat_percent_goal %></td>
      <td><%= user.address_street1 %></td>
      <td><%= user.address_street2 %></td>
      <td><%= user.address_city %></td>
      <td><%= user.address_state %></td>
      <td><%= user.zipcode %></td>
      <td><%= user.address_country %></td>
      <td><%= link_to user.name, user_path(user.id) %></td>
      <td>
	<% if current_user && (current_user.id == user.id) %>
	<%= link_to "Edit profile", edit_user_registration_path(user.id) %>
	<% else %>
	Not permitted
	<% end %>
      </td>
      
      <td>
     <% if current_user && (current_user.id == user.id) %>
     <%= link_to "Destroy user", user, confirm: "you sure you want to delete this user?", method: :delete %>
     <% else %>
     Not permitted
     <% end %>
   </td>
 </tr>
 <% end %>

</table>
